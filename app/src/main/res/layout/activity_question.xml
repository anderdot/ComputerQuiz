<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".QuestionActivity">

    <TextView
        android:id="@+id/txtAnswer"
        android:layout_width="353dp"
        android:layout_height="307dp"
        android:layout_marginTop="48dp"
        android:foregroundTint="@color/white"
        android:text="uma pergunta de nivel muito elevada e com um texto bem grande."
        android:textSize="20sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnA"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@color/teal_200"
        android:fontFamily="sans-serif"
        android:foregroundTint="@color/white"
        android:gravity="center|left"
        android:includeFontPadding="false"
        android:linksClickable="false"
        android:shadowColor="#009688"
        android:text="A"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="#00BCD4"
        app:strokeColor="#009688" />

    <Button
        android:id="@+id/btnD"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="624dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@color/teal_200"
        android:fontFamily="sans-serif"
        android:foregroundTint="@color/white"
        android:gravity="center|left"
        android:includeFontPadding="false"
        android:linksClickable="false"
        android:shadowColor="#009688"
        android:text="D"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#00BCD4"
        app:strokeColor="#009688" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="504dp"
        android:layout_marginBottom="34dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@color/teal_200"
        android:fontFamily="sans-serif"
        android:foregroundTint="@color/white"
        android:gravity="center|left"
        android:includeFontPadding="false"
        android:linksClickable="false"
        android:shadowColor="#009688"
        android:text="C"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="#00BCD4"
        app:strokeColor="#009688" />

    <Button
        android:id="@+id/btnB"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="428dp"
        android:layout_marginBottom="34dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@color/teal_200"
        android:fontFamily="sans-serif"
        android:foregroundTint="@color/white"
        android:gravity="center|left"
        android:includeFontPadding="false"
        android:linksClickable="false"
        android:shadowColor="#009688"
        android:text="B"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="#00BCD4"
        app:strokeColor="#009688" />

</androidx.constraintlayout.widget.ConstraintLayout>